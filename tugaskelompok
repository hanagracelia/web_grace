<!DOCTYPE html>
<html>
<head>
    <title>Cek Bilangan Prima dan Faktorial</title>
</head>
<body>
    <h1>Topik 2</h1>
    <form method="POST" action="">
        <label for="angka">Masukkan Angka:</label>
        <input type="number" id="angka" name="angka" required>
        <button type="submit">Proses</button>
    </form>

    <?php
    // Fungsi untuk memeriksa bilangan prima
    function isPrima($n) {
        if ($n < 2) {
            return false;
        }
        for ($i = 2; $i <= sqrt($n); $i++) {
            if ($n % $i == 0) {
                return false;
            }
        }
        return true;
    }

    // Fungsi untuk menghitung faktorial
    function faktorial($n) {
        if ($n == 0 || $n == 1) {
            return 1;
        }
        $hasil = 1;
        for ($i = 1; $i <= $n; $i++) {
            $hasil *= $i;
        }
        return $hasil;
    }

    // Memproses input jika form dikirim
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        $angka = intval($_POST["angka"]);

        // Validasi angka positif
        if ($angka < 0) {
            echo "<p>Masukkan angka positif!</p>";
        } else {
            // Pengecekan bilangan prima
            $prima = isPrima($angka) ? "Bilangan Prima" : "Bukan Bilangan Prima";

            // Perhitungan faktorial
            $faktorialHasil = faktorial($angka);

            // Menampilkan hasil
            echo "<h2>Hasil:</h2>";
            echo "<p>Angka: $angka</p>";
            echo "<p>Status: $prima</p>";
            echo "<p>Faktorial: $faktorialHasil</p>";
        }
    }
    ?>
</body>
</html>